# Environment Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/egyptian-digital-store
MONGODB_TEST_URI=mongodb://localhost:27017/egyptian-digital-store-test

# Redis Configuration (Optional for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=digital-store

# Egyptian Payment Gateways
# Fawry Configuration
FAWRY_MERCHANT_CODE=your-merchant-code
FAWRY_SECURITY_KEY=your-security-key
FAWRY_BASE_URL=https://atfawry.fawrystaging.com

# Vodafone Cash Configuration
VODAFONE_CASH_USERNAME=your-username
VODAFONE_CASH_PASSWORD=your-password
VODAFONE_CASH_BASE_URL=https://vodafone-cash-api.com

# Orange Money Configuration
ORANGE_MONEY_CLIENT_ID=your-client-id
ORANGE_MONEY_CLIENT_SECRET=your-client-secret
ORANGE_MONEY_BASE_URL=https://orange-money-api.com

# Instapay Configuration
INSTAPAY_MERCHANT_ID=your-merchant-id
INSTAPAY_API_KEY=your-api-key
INSTAPAY_BASE_URL=https://instapay-api.com

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Egyptian Digital Store <noreply@yourstore.com>

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your-whatsapp-business-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_BASE_URL=https://graph.facebook.com/v18.0

# File Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,rar,mp4,mp3,jpg,jpeg,png,gif

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# Download Configuration
DOWNLOAD_LINK_EXPIRY_HOURS=24
MAX_DOWNLOAD_ATTEMPTS=5
DOWNLOAD_RETRY_DELAY_MS=1000

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=5000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Egyptian Localization
DEFAULT_CURRENCY=EGP
DEFAULT_LANGUAGE=ar
DEFAULT_TIMEZONE=Africa/Cairo

# Tax Configuration
TAX_RATE=0.14
TAX_INCLUDED=true

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Development Configuration
DEBUG=app:*
SWAGGER_ENABLED=true
API_DOCS_PATH=/api/docs

# Production Configuration (Override in production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# CLUSTER_MODE=true
# CLUSTER_WORKERS=4